<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <ImageView
        android:id="@+id/musicThumbnail"
        android:layout_width="61dp"
        android:layout_height="77dp"

        android:layout_margin="8dp"

        android:layout_marginTop="4dp"

        android:scaleType="fitStart"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/play_music" />

    <TextView
        android:id="@+id/musicName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:paddingTop="16dp"
        android:text="TextView"
        android:textSize="20sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/musicThumbnail"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/musicSize"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="#afff"
        android:gravity="start"
        android:padding="4dp"
        android:text="sandeep"
        app:layout_constraintBottom_toBottomOf="@+id/musicName"
        app:layout_constraintEnd_toEndOf="@+id/musicName"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/musicName" />




</androidx.constraintlayout.widget.ConstraintLayout>