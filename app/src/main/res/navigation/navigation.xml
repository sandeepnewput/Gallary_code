<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/loginFragment">


    <action
        android:id="@+id/action_global_fullImageFragmentView"
        app:destination="@id/fullImageViewFragment" />

<!--  this global action i have to remove  -->
    <action
        android:id="@+id/action_global_bottomNavigationView"
        app:destination="@id/bottomNavigationViewFragment" />

    <action
        android:id="@+id/action_global_playVideoFragmentView"
        app:destination="@id/playVideoFragment" />

    <fragment
        android:id="@+id/loginFragment"
        android:name="com.example.gallaryapplication.view.view.view.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login">
        <action
            android:id="@+id/action_loginFragment_to_bottomNav"
            app:destination="@id/bottomNavigationViewFragment" />
    </fragment>


    <fragment
        android:id="@+id/bottomNavigationViewFragment"
        android:name="com.example.gallaryapplication.view.view.view.BottomNavigationViewFragment"
        android:label="BottomNavigationViewFragment"
        tools:layout="@layout/fragment_bottom_navigation_view"></fragment>


    <fragment
        android:id="@+id/fullImageViewFragment"
        android:name="com.example.gallaryapplication.view.view.view.FullImageViewFragment"
        android:label="fragment_full_image_view"
        tools:layout="@layout/fragment_full_image_view" />
    <fragment
        android:id="@+id/playVideoFragment"
        android:name="com.example.gallaryapplication.view.view.view.PlayVideoFragment"
        android:label="fragment_play_video"
        tools:layout="@layout/fragment_play_video" />


</navigation>
